<div class="form">
<h1>Edit the Question</h1>


<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

<div class="footer">
<%= link_to "Delete this Question", @question, :method => 'delete' %>
</div>
