<div class="page">

<h1><%= @question.title %> </h1>
<h6> Asked by: <%= @question.user.username %> </h6> <br>
<h3 class="categorys"> Description: </h3>
<h4><%= @question.body %></h4>
<br>

  <h4 class="categorys"> Answers: </h4>
<ul class="white-background">
  <% @answers.each do |answer| %>
  <li>
     <%= answer.body %>
     - <%= answer.user.username  %>
   </li>
   <%end%>
</ul>
</div>

<div class="form">
<p id="notice"><%= notice %></p>
  <h2>Know a Solution?<h2>
  <%= form_for [@question, @answer] do |f| %>
    <div class="field">
      <%= f.label :body,"Enter a Solution" %>
      <%= f.text_field :body %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <br>
</div>

<div class="footer">

<%= link_to 'Back to Home', questions_path %>

<% if is_owner?(@question) %>
  / <%= link_to 'Edit question', edit_question_path%> /
  <%= link_to "Delete this Question", @question, :method => 'delete' %>
<%end %>
</div>
